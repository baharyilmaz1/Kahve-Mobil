<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnkahve"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginBottom="15dp"
                android:alpha="0.6"
                android:background="@drawable/anakahve"
                android:text="kahveler"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnmakine"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginBottom="15dp"
                android:alpha="0.6"
                android:background="@drawable/anakahvemakinesi"
                android:text="kahve makineleri"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnmatara"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_alignLeft="@+id/btnmatara"
                android:layout_marginBottom="15dp"
                android:alpha="0.6"
                android:background="@drawable/anamatara"
                android:text="matara"

                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling" />

            <Button

                android:id="@+id/btnmug"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginBottom="15dp"
                android:alpha="0.6"
                android:background="@drawable/anamug"
                android:text="mug"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btntermos"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginBottom="15dp"
                android:alpha="0.6"
                android:background="@drawable/anatermos"
                android:text="termos"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>